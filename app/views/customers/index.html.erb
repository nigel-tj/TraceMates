<%- model_class = Customer -%>

<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    
    <div class="row">
            
      <%= link_to t('.new', :default => t("helpers.links.new")),
      new_customer_path,
      :class => 'btn btn-primary' %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:customer_id) %></th>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:surname) %></th>
            <th><%= model_class.human_attribute_name(:phone) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td><%= link_to customer.id, customer_path(customer) %></td>
            <td><%= customer.customer_id %></td>
            <td><%= customer.name %></td>
            <td><%= customer.surname %></td>
            <td><%= customer.phone %></td>
            <td>
	      <a href="/customers/<%= customer.id %>"> view all parcels </a>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_customer_path(customer), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              customer_path(customer),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>    
  </div>
</div>
<!-- /page content -->
