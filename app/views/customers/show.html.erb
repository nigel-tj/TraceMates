<%- model_class = Parcel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:parcel_id) %>:</strong></dt>
  <dd><%= @parcel.parcel_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @parcel.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parcel_details) %>:</strong></dt>
  <dd><%= @parcel.parcel_details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creation_time) %>:</strong></dt>
  <dd><%= @parcel.creation_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modified_time) %>:</strong></dt>
  <dd><%= @parcel.modified_time %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              parcels_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_parcel_path(@parcel), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              parcel_path(@parcel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
