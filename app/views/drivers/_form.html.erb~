    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@driver.errors.count, "error") %> prohibited this driver from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @driver.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :driver_id, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :driver_id, :class => 'form-control' %>
      </div>
      <%=f.error_span(:driver_id) %>
    </div>
    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
