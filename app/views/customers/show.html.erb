<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
    </div>
    
    
    <div class="row">
      <%= link_to t('customers', :default => "List Customers"),
      "customers",
      :class => 'btn btn-primary' %>
 
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;">
          <div class="x_title">
            <h2>Delivery Sheet</h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
	  <div>
	    <%= render :partial => 'form' %>
	  </div>
	  <div class="clearfix"></div>
	  <div class="row">
	    <div class="col-md-12 col-sm-12 col-xs-12">
              <div class="x_panel">		
		<div class="x_title">
		  <h2>Parcels</h2>
                  
                  <%= link_to t('.new', :default => t("helpers.links.new")),
                      new_parcel_path(@parcel, :customer_id =>  @customer.id ), :class => 'btn btn-primary pull-right' %>
                  
		  <table class="table table-striped">
		    <thead>
		      <tr>
			<th>parcel id</th>
			<th>parcel name</th>
			<th>parcel details</th>		
		      </tr>
		    </thead>
		    <tbody>
		      <% @parcels.each do |parcel| %>
		      <tr>
			<td><%= link_to parcel.parcel_id, parcel_path(parcel) %></td>
			<td><%= parcel.name %></td>
			<td><%= parcel.parcel_details %></td>
			<td>
			  <a href="/trace/<%= parcel.parcel_id%>"> trace </a>
			  <%= link_to t('.edit', :default => t("helpers.links.edit")),
			  edit_parcel_path(parcel), :class => 'btn btn-primary' %>
			</td>
		      </tr>
		      <% end %>
		    </tbody>
		  </table>
		</div>
	      
	      </div>
	    </div>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
  <!-- /page content -->
  
