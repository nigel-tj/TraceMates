<%- model_class = Driver -%>

<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button">Go!</button>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    
    <div class="row">
      
      <%= link_to t('.new', :default => t("helpers.links.new")),
      new_driver_path,
      :class => 'btn btn-primary' %>

      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:id) %></th>
            <th><%= model_class.human_attribute_name(:driver_id) %></th>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:surname) %></th>
            <th><%= model_class.human_attribute_name(:phone) %></th>
            <th><%= model_class.human_attribute_name(:address) %></th>
            <th><%= model_class.human_attribute_name(:email) %></th>

            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @drivers.each do |driver| %>
          <tr>
            <td><%= link_to driver.id, driver_path(driver) %></td>
            <td><%= driver.driver_id %></td>
            <td><%= driver.name %></td>
            <td><%= driver.surname %></td>
            <td><%= driver.phone %></td>
            <td><%= driver.address %></td>
            <td><%= driver.email %></td>
            <td>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_driver_path(driver), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              driver_path(driver),
              :method => :delete,
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-xs btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
