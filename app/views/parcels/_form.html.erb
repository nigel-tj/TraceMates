<%= form_for @parcel, :html => { :class => "form-horizontal parcel" } do |f| %>

  <% if @parcel.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@parcel.errors.count, "error") %> prohibited this parcel from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @parcel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :parcel_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :parcel_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:parcel_id) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :parcel_details, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :parcel_details, :class => 'form-control' %>
    </div>
    <%=f.error_span(:parcel_details) %>
  </div>
  <div class="form-group">
    <%= f.label :creation_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :creation_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:creation_time) %>
  </div>
  <div class="form-group">
    <%= f.label :modified_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :modified_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:modified_time) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                parcels_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
